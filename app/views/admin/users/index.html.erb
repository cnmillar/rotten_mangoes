<h3>Users</h3>

<%= paginate @users %>

<table style="width:100%">
	<tr>
		<td>Name</td>
		<td>Email</td>
		<td>Member Since</td>
		<td>Administrator?</td>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td><%= link_to "#{user.firstname} #{user.lastname}", "/admin/users/#{user.id}/" %></td>
			<td><%= user.email %></td>
			<td><%= formatted_date(user.created_at) %></td>
			<td><%= user.admin ? 'yes': 'no' %></td>
		</tr>
	<% end %>
</table>
</br>