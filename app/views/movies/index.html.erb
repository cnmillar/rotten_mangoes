<h1>Welcome to Rotten Mangoes!</h1>
<hr>
<%= form_tag("movies/search", method: "get") do %>
	<div>
	 	<%= label_tag("title", "Title:") %>
	  <%= text_field_tag("title") %>
  </div>
 	<div>
	 	<%= label_tag("director", "Director:") %>
	  <%= text_field_tag("director") %>
  </div>

	<div>
	 	<%= label_tag(:duration, "Duration:") %>
	 	<%= select_tag(:duration, options_for_select([["Under 90 minutes", :under],["Between 90 and 120 minutes", :between],["Over 120 minutes", :over]])) %>
  </div> 

  <%= submit_tag("Search") %>
<% end %>

<hr>

<%= link_to "Create a post!", new_movie_path %>

<h4>Here is a list of movies:</h4>
<% @movies.each do |movie| %>
	<h1><%=link_to movie.title, movie_path(movie)%></h1>
	<small>- <%= formatted_date(movie.release_date) %></small></br>

  <h3><%= movie.director %></h3>
  <p><%= movie.runtime_in_minutes %></p>
  <p><%= movie.description %></p>
  <%= movie.review_average %>/10
<% end %>